<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<!-- Specifies the display name of the web application -->
	<display-name>StudentManagement</display-name>

	<!-- Configures the list of welcome files for the application -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- Defines a filter for handling login authentication -->
	<filter>
		<!-- Name of the filter -->
		<filter-name>AuthenticationFilter</filter-name>
		<!-- Fully qualified class name of the filter -->
		<filter-class>controller.filters.AuthenticationFilter</filter-class>
	</filter>
	<!-- Maps the filter to URLs that it will intercept -->
	<filter-mapping>
		<!-- Name of the filter being mapped -->
		<filter-name>AuthenticationFilter</filter-name>
		<!-- URL pattern to which the filter will be applied -->
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>